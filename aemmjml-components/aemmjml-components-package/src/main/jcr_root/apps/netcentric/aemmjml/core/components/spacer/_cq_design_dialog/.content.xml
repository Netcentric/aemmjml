<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:description="Spacer Design Dialog"
    jcr:primaryType="nt:unstructured"
    jcr:title="Spacer"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <style
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Style"
                        sling:resourceType="granite/ui/components/coral/foundation/accordion"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <component
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Component Specifics"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <vertical-algin
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        emptyText="Top"
                                        fieldLabel="Vertical Alignment"
                                        name="./mjmlVerticalAlign">
                                        <items jcr:primaryType="nt:unstructured">
                                            <top
                                                jcr:primaryType="nt:unstructured"
                                                text="Top"
                                                value=""/>
                                            <middle
                                                jcr:primaryType="nt:unstructured"
                                                text="Middle"
                                                value="middle"/>
                                            <bottom
                                                jcr:primaryType="nt:unstructured"
                                                text="Bottom"
                                                value="bottom"/>
                                        </items>
                                    </vertical-algin>
                                    <width
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Width"
                                        name="./mjmlWidth"/>
                                    <height
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="20px"
                                        fieldLabel="Height"
                                        name="./mjmlHeight"/>
                                    <containerBackgroundColor
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Container Background Color"
                                        name="./mjmlContainerBackgroundColor"/>
                                </items>
                            </component>
                            <border
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Border"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <border
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="none"
                                        fieldLabel="Border"
                                        name="./mjmlBorder"/>
                                    <borderBottom
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="none"
                                        fieldLabel="Border Bottom"
                                        name="./mjmlBorderBottom"/>
                                    <borderLeft
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="none"
                                        fieldLabel="Border Left"
                                        name="./mjmlBorderLeft"/>
                                    <borderRight
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="none"
                                        fieldLabel="Border Right"
                                        name="./mjmlBorderRight"/>
                                    <borderTop
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="none"
                                        fieldLabel="Border Top"
                                        name="./mjmlBorderTop"/>
                                    <borderRadius
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText=""
                                        fieldLabel="Border Radius"
                                        name="./mjmlBorderRadius"/>
                                </items>
                            </border>
                            <padding
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Padding"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <padding
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="0px"
                                        fieldLabel="Padding"
                                        name="./mjmlPadding"/>
                                    <paddingBottom
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText=""
                                        fieldLabel="Padding Bottom"
                                        name="./mjmlPaddingBottom"/>
                                    <paddingLeft
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText=""
                                        fieldLabel="Padding Left"
                                        name="./mjmlPaddingLeft"/>
                                    <paddingRight
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText=""
                                        fieldLabel="Padding Right"
                                        name="./mjmlPaddingRight"/>
                                    <paddingTop
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText=""
                                        fieldLabel="Padding Top"
                                        name="./mjmlPaddingTop"/>
                                </items>
                            </padding>
                        </items>
                    </style>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
