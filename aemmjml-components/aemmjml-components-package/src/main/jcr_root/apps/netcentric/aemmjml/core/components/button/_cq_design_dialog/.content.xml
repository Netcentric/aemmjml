<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:description="Button Design Dialog"
    jcr:primaryType="nt:unstructured"
    jcr:title="Button"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <style
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Style"
                        sling:resourceType="granite/ui/components/coral/foundation/accordion"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <component
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Component Specifcs"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <align
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        emptyText="Center"
                                        fieldLabel="Alignment"
                                        name="./mjmlAlign">
                                        <items jcr:primaryType="nt:unstructured">
                                            <center
                                                jcr:primaryType="nt:unstructured"
                                                text="Center"
                                                value="center"/>
                                            <left
                                                jcr:primaryType="nt:unstructured"
                                                text="Left"
                                                value="left"/>
                                            <right
                                                jcr:primaryType="nt:unstructured"
                                                text="Right"
                                                value="right"/>
                                        </items>
                                    </align>
                                    <verticalAlgin
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        emptyText="middle"
                                        fieldLabel="Vertical Alignment"
                                        name="./mjmlVerticalAlign">
                                        <items jcr:primaryType="nt:unstructured">
                                            <top
                                                jcr:primaryType="nt:unstructured"
                                                text="Top"
                                                value="top"/>
                                            <middle
                                                jcr:primaryType="nt:unstructured"
                                                text="Middle"
                                                value="middle"/>
                                            <bottom
                                                jcr:primaryType="nt:unstructured"
                                                text="Bottom"
                                                value="bottom"/>
                                        </items>
                                    </verticalAlgin>
                                    <innerPadding
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="5px 10px"
                                        fieldLabel="Inner Padding"
                                        name="./mjmlInnerPadding"/>
                                    <width
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText=""
                                        fieldLabel="Width"
                                        name="./mjmlWidth"/>
                                    <height
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Height"
                                        name="./mjmlHeight"/>
                                    <containerBackgroundColor
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="In hex format: #FFFFFF for example"
                                        fieldLabel="Container Background Color"
                                        name="./mjmlContainerBackgroundColor"/>
                                </items>
                            </component>
                            <background
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Background"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <backgroundColor
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="#414141"
                                        fieldLabel="Background Color"
                                        name="./mjmlBackgroundColor"/>
                                </items>
                            </background>
                            <border
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Border"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <border
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="none"
                                        fieldLabel="Border"
                                        name="./mjmlBorder"/>
                                    <borderTop
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="none"
                                        fieldLabel="Border Top"
                                        name="./mjmlBorderTop"/>
                                    <borderRight
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="none"
                                        fieldLabel="Border Right"
                                        name="./mjmlBorderRight"/>
                                    <borderBottom
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="none"
                                        fieldLabel="Border Bottom"
                                        name="./mjmlBorderBottom"/>
                                    <borderLeft
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="none"
                                        fieldLabel="Border Left"
                                        name="./mjmlBorderLeft"/>
                                    <borderRadius
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="3px"
                                        fieldLabel="Border Radius"
                                        name="./mjmlBorderRadius"/>
                                </items>
                            </border>
                            <text
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Text"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <align
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        emptyText="Left"
                                        fieldLabel="Alignment"
                                        name="./mjmlTextAlign">
                                        <items jcr:primaryType="nt:unstructured">
                                            <left
                                                jcr:primaryType="nt:unstructured"
                                                text="Left"
                                                value="left"/>
                                            <right
                                                jcr:primaryType="nt:unstructured"
                                                text="Right"
                                                value="right"/>
                                            <center
                                                jcr:primaryType="nt:unstructured"
                                                text="Center"
                                                value="center"/>
                                        </items>
                                    </align>
                                    <color
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="#ffffff"
                                        fieldLabel="Color"
                                        name="./mjmlColor"/>
                                    <fontFamily
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="Ubuntu, Helvetica, Arial, sans-serif"
                                        fieldLabel="Font Family"
                                        name="./mjmlFontFamily"/>
                                    <fontSize
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="13px"
                                        fieldLabel="Font Size"
                                        name="./mjmlFontSize"/>
                                    <fontStyle
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        emptyText="Normal"
                                        fieldLabel="Font Style"
                                        name="./mjmlFontStyle">
                                        <items jcr:primaryType="nt:unstructured">
                                            <normal
                                                jcr:primaryType="nt:unstructured"
                                                text="Normal"
                                                value="normal"/>
                                            <italic
                                                jcr:primaryType="nt:unstructured"
                                                text="Italic"
                                                value="italic"/>
                                            <oblique
                                                jcr:primaryType="nt:unstructured"
                                                text="Oblique"
                                                value="oblique"/>
                                        </items>
                                    </fontStyle>
                                    <fontWeight
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        emptyText="Normal (400)"
                                        fieldLabel="Font Weight"
                                        name="./mjmlFontWeight">
                                        <items jcr:primaryType="nt:unstructured">
                                            <normal
                                                jcr:primaryType="nt:unstructured"
                                                text="Normal (400)"
                                                value="400"/>
                                            <lighter1
                                                jcr:primaryType="nt:unstructured"
                                                text="Lighter (100)"
                                                value="100"/>
                                            <lighter2
                                                jcr:primaryType="nt:unstructured"
                                                text="Lighter (200)"
                                                value="200"/>
                                            <lighter3
                                                jcr:primaryType="nt:unstructured"
                                                text="Lighter (300)"
                                                value="300"/>
                                            <bolder1
                                                jcr:primaryType="nt:unstructured"
                                                text="Bolder (500)"
                                                value="500"/>
                                            <bolder2
                                                jcr:primaryType="nt:unstructured"
                                                text="Bolder (600)"
                                                value="600"/>
                                            <bolder3
                                                jcr:primaryType="nt:unstructured"
                                                text="Bolder (700)"
                                                value="700"/>
                                            <bolder4
                                                jcr:primaryType="nt:unstructured"
                                                text="Bolder (800)"
                                                value="800"/>
                                            <bolder5
                                                jcr:primaryType="nt:unstructured"
                                                text="Bolder (900)"
                                                value="900"/>
                                        </items>
                                    </fontWeight>
                                    <lineHeight
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="120%"
                                        fieldLabel="Line Height"
                                        name="./mjmlLineHeight"/>
                                    <textDecoration
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        emptyText="None"
                                        fieldLabel="Text Decoration"
                                        name="./mjmlTextDecoration">
                                        <items jcr:primaryType="nt:unstructured">
                                            <none
                                                jcr:primaryType="nt:unstructured"
                                                text="None"
                                                value=""/>
                                            <underline
                                                jcr:primaryType="nt:unstructured"
                                                text="Underline"
                                                value="underline"/>
                                            <overline
                                                jcr:primaryType="nt:unstructured"
                                                text="Overline"
                                                value="overline"/>
                                        </items>
                                    </textDecoration>
                                    <textTransform
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        emptyText="None"
                                        fieldLabel="Text Transform"
                                        name="./mjmlTextTransform">
                                        <items jcr:primaryType="nt:unstructured">
                                            <none
                                                jcr:primaryType="nt:unstructured"
                                                text="None"
                                                value=""/>
                                            <uppercase
                                                jcr:primaryType="nt:unstructured"
                                                text="Uppercase"
                                                value="uppercase"/>
                                            <lowercase
                                                jcr:primaryType="nt:unstructured"
                                                text="Lowercase"
                                                value="lowercase"/>
                                            <capitalize
                                                jcr:primaryType="nt:unstructured"
                                                text="Capitalize"
                                                value="capitalize"/>
                                        </items>
                                    </textTransform>
                                </items>
                            </text>
                            <padding
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Padding"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <padding
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="20px 0"
                                        fieldDescription="Up to for numeric widths in pixels (css format): for example 20px 20px 10px 10px"
                                        fieldLabel="Padding"
                                        name="./mjmlPadding"/>
                                    <paddingBottom
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText=""
                                        fieldDescription="A numeric widths in pixels: for example 20px"
                                        fieldLabel="Padding Bottom"
                                        name="./mjmlPaddingBottom"/>
                                    <paddingLeft
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText=""
                                        fieldDescription="A numeric widths in pixels: for example 20px"
                                        fieldLabel="Padding Left"
                                        name="./mjmlPaddingLeft"/>
                                    <paddingRight
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText=""
                                        fieldDescription="A numeric widths in pixels: for example 20px"
                                        fieldLabel="Padding Right"
                                        name="./mjmlPaddingRight"/>
                                    <paddingTop
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText=""
                                        fieldDescription="A numeric widths in pixels: for example 20px"
                                        fieldLabel="Padding Top"
                                        name="./mjmlPaddingTop"/>
                                </items>
                            </padding>
                        </items>
                    </style>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
